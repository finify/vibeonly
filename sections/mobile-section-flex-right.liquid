<div class="mobile-flex-right">
  <div class="section   section-blends section-full">
      <div class="row row-reverse">
          <div class="col-lg-6 col-md-6 col-12 text-content">
              <h1 class="mobile-app-flex-title title-break" bp="{{ section.settings.breakpoint }}">{{ section.settings.heading1 }}</h1>
              <h4 class="mobile-app-flex-subtext">{{ section.settings.richtext1 }}</h4>
          
              <a class="mobile-app-section__button" href="{{ section.settings.link1 }}">
                  {{- section.settings.link1text -}}
              </a>
          </div>
          <div class="col-lg-6 col-md-6 col-12 mobile-flex-right-img mobile-app-section__media">
            {%- if section.settings.image != blank -%}
              {{-
                section.settings.image
                | image_url: width: 2024
                | image_tag: loading: 'lazy', widths: '300,400,500,600,700,800,1000,1200,1400,1600,1800,2000,2200,2400,2600'
              -}}
            {%- else -%}
              {{- 'image' | placeholder_svg_tag: 'aspect-short placeholder' -}}
            {%- endif -%}
          </div>
      </div>
  </div>
</div>

{% schema %}
  {
      "name": "mobile-flexible-right",
      "class":"mobile-flex-right",
      "tag": "section",
      "settings": [
          {
              "type": "text",
              "id": "heading1",
              "label": "Heading 1",
              "default": "Designed for one handed use"
          },
          {
              "type": "number",
              "id": "breakpoint",
              "label": "Sentence Breakpoint for Heading",
              "default": 0
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
            "info": "1500 x 1500px .jpg recommended"
          },
          {
              "type": "richtext",
              "id": "richtext1",
              "label": "Richtext 1",
              "default": "<p>The Vibes Only app's custom controller lets you adjust the intensity (0-100%), pick patterns, toggle stealth mode, and control dual motors vibrators independently.</p>"
          },
          {
              "type": "url",
              "id": "link1",
              "label": "Link 1"
          },
          {
              "type": "text",
              "id": "link1text",
              "label": "Link 1 text",
              "default": "TRY IT OUT"
          }
      ],
      "presets": [
          {
              "name": "mobile-flexible-right"
          }
      ]
  }
  {% endschema %}

{% stylesheet %}

.text-content{
  display:flex;
  flex-direction:column;
  flex-wrap: wrap;
    align-content: space-around;
    justify-content: center;
}

  .mobile-flex-right-img img{
    width: 367px;
    margin: auto;
  }
  
  .flexible_image{
    width:200%!important;
    object-fit: fill;
  }
  .container{
    margin-bottom:30px;
  }
  .mobile-app-flexible__title{
    margin-top:30px;
    color: #403131;
    font-family: Operetta 12;
    font-size: 3.5vw;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
  }
  
{% endstylesheet %}

