<div class="mobile-flex-left">
    <div class="section section-blends section-full pb-1">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-12 mobile-flex-left-img">
            {%- if section.settings.image_left != blank -%}
                {{-
                section.settings.image_left
                | image_url: width: 2024
                | image_tag: loading: 'lazy', widths: '300,400,500,600,700,800,1000,1200,1400,1600,1800,2000,2200,2400,2600'
                -}}
            {%- else -%}
                {{- 'image' | placeholder_svg_tag: 'aspect-short placeholder' -}}
            {%- endif -%}
            </div>
            <div class="col-lg-6 col-md-6 col-12 text-content">
                <h1 class="mobile-app-flex-left__title" bp="{{ section.settings.breakpoint }}">{{ section.settings.heading1 }}</h1>
                <h2 class="mobile-app-flexible__subtext">{{ section.settings.richtext1 }}</h2>
            
                <a class="mobile-app-section__button" href="{{ section.settings.link1 }}">
                    {{- section.settings.link1text -}}
                </a>
            </div>
        </div>
    </div>
</div>



{% schema %}
  {
      "name": "mobile-flexible-left",
      "class":"mobile-flex-left",
      "tag": "section",
      "settings": [
          {
              "type": "text",
              "id": "heading1",
              "label": "Heading 1",
              "default": "Designed for one handed use"
          },
          {
              "type": "number",
              "id": "breakpoint",
              "label": "Sentence Breakpoint",
              "default": 0
          },
          {
            "type": "image_picker",
            "id": "image_left",
            "label": "Image",
            "info": "1500 x 1500px .jpg recommended"
          },
          {
              "type": "richtext",
              "id": "richtext1",
              "label": "Richtext 1",
              "default": "<p>The Vibes Only app's custom controller lets you adjust the intensity (0-100%), pick patterns, toggle stealth mode, and control dual motors vibrators independently.</p>"
          },
          {
              "type": "url",
              "id": "link1",
              "label": "Link 1"
          },
          {
              "type": "text",
              "id": "link1text",
              "label": "Link 1 text",
              "default": "TRY IT OUT"
          }
      ],
      "presets": [
          {
              "name": "mobile-flexible-left"
          }
      ]
  }
  {% endschema %}

{% stylesheet %}
.mobile-flex-left-img img{
    width: 367px;
    margin: auto;
}
.text-content{
  display:flex;
  flex-direction:column;
  flex-wrap: wrap;
    align-content: space-around;
    justify-content: center;
}
  .mobile-app-flexible__subtext{
