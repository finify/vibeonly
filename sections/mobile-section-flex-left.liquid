    margin-left: 0px!important;
  }
  .mobile-app-flex-left__title{
    margin-top:30px;
    color: #403131;
    font-family: Operetta 12;
    font-size:80px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
  }
  .mobile-app-section__button{
    margin-top:10px!important;
    padding:13px;
    font-size: 13px;
    color: #403131;
    width: fit-content;
    font-weight:400;
    font-family: Helvetica Neue;
    border-radius: 12px;
    border: 1px solid rgba(191, 85, 105, 0.30);
    background: linear-gradient(90deg, rgba(229, 102, 126, 0.60) -42.84%, rgba(248, 228, 230, 0.60) 114.03%);
  }

  @media only screen and (max-width: 600px) {
    .mobile-app-flex-left__title{
        font-size:40px;
    }
  }
{% endstylesheet %}

